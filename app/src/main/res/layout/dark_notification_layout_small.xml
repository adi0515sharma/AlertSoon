<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:background="@color/night_notification_bg"
    >

    <TextView
        android:textSize="18dp"
        android:textColor="@color/night_on_notification_bg"
        android:id="@+id/title"
        android:textStyle="bold"
        android:paddingLeft="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:textSize="13dp"
        android:textColor="@color/night_on_notification_bg"
        android:id="@+id/text"
        android:paddingLeft="2dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toLeftOf="@id/emoji"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        />

    <TextView
        android:id="@+id/emoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dismiss"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/text"
        android:gravity="center_vertical"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/snooze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/snooze"
        android:textAllCaps="true"
        android:textColor="@color/night_on_notification_button_bg"
        android:paddingVertical="10dp"
        android:paddingHorizontal="10dp"
        android:layout_below="@id/text"
        android:includeFontPadding="false"
        android:layout_marginTop="10dp"
        android:background="@drawable/dark_rounded_curve"
        android:elevation="0dp"
        />

    <TextView
        android:id="@+id/dismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dismiss"
        android:textAllCaps="true"
        android:textColor="@color/night_on_notification_button_bg"
        android:paddingVertical="10dp"
        android:paddingHorizontal="10dp"
        android:layout_below="@id/text"
        android:includeFontPadding="false"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/snooze"
        android:background="@drawable/dark_rounded_curve"
        android:elevation="0dp"
        />


</RelativeLayout>